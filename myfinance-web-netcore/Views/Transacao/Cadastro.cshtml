@model myfinance_web_netcore.Domain.TransacaoModel

@{
    ViewData["Title"] = "Cadastro de Transação";
}

<h1 class="mt-3 mb-3">Cadastro de Transação</h1>

<form asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Historico" class="form-label"></label>
        <input asp-for="Historico" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="DataTransacao" class="form-label"></label>
        <input asp-for="DataTransacao" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="Valor" class="form-label"></label>
        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="PlanoContaId" class="form-label">Plano de Conta</label>
        <select asp-for="PlanoContaId" asp-items="Model.PlanoContasSelectList" class="form-select">
            <option value="">Selecione...</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
